<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<?import org.controlsfx.glyphfont.Glyph?>
<VBox fx:id="body" alignment="CENTER" minHeight="500.0" minWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NameSayer.controller.NameSayer">
	<padding>
		<Insets bottom="25" left="25" right="25" top="25" />
	</padding>

	<HBox alignment="CENTER" spacing="10">
		<VBox spacing="10">
			<Text fx:id="currentCourse" />
			<TableView fx:id="Creations">
				<placeholder>
					<Label text="No existing names" />
				</placeholder>
				<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
				<columns>
					<TableColumn sortable="false" text="Names">
						<cellValueFactory>
							<PropertyValueFactory property="name" />
						</cellValueFactory>
					</TableColumn>
				</columns>
			</TableView>
		</VBox>

		<VBox alignment="TOP_CENTER" spacing="10">
			<TextFlow fx:id="currentCreationName" prefWidth="320" textAlignment="CENTER">
				<Text style="-fx-font-size: 32px;" text="Choose Name" />
			</TextFlow>

			<HBox alignment="CENTER" spacing="10">
				<Button fx:id="prevCreation">
					<graphic>
						<Glyph fontFamily="FontAwesome" icon="STEP_BACKWARD" fontSize="24"/>
					</graphic>
				</Button>
				<Button fx:id="playButton" style="-fx-background-color: green;">
					<graphic>
						<Glyph fontFamily="FontAwesome" icon="PLAY" fontSize="24"/>
					</graphic>
				</Button>
				<Button fx:id="nextCreation">
					<graphic>
						<Glyph fontFamily="FontAwesome" icon="STEP_FORWARD" fontSize="24"/>
					</graphic>
				</Button>
			</HBox>

			<HBox fx:id="rateRecording" alignment="CENTER" spacing="10" disable="true">
				<ComboBox fx:id="nameParts" />
				<CheckBox fx:id="badRating" text="Bad Recording" />
			</HBox>

			<HBox alignment="CENTER" spacing="10">
				<Button fx:id="attemptName" text="Attempt Name" />
			</HBox>

			<Text text="Past Attempts:"/>
			<ComboBox fx:id="pastAttempts"/>
			<HBox alignment="CENTER" spacing="10">
				<Button fx:id="playAttempt">
					<graphic>
						<Glyph fontFamily="FontAwesome" icon="PLAY" fontSize="18"/>
					</graphic>
				</Button>
				<Button fx:id="trashAttempt">
					<graphic>
						<Glyph fontFamily="FontAwesome" icon="TRASH" fontSize="18"/>
					</graphic>
				</Button>
			</HBox>
         <Pane prefHeight="200.0" prefWidth="200.0">
            <children>
               <ProgressBar fx:id="soundLevelBar" layoutX="60.0" layoutY="124.0" prefHeight="28.0" prefWidth="200.0" progress="0.0" />
               <Label fx:id="testMicLabel" alignment="CENTER" layoutX="103.0" layoutY="100.0" text="Microphone Level" />
            </children>
         </Pane>
		</VBox>
	</HBox>
</VBox>
