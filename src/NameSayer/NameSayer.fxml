<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="body" spacing="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NameSayer.Controller">
	<padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>

    <Text text="Welcome to NameSayer!" />

    <HBox spacing="10">
        <VBox spacing="10">
            <TableView fx:id="Creations">
                <placeholder>
                    <Label text="No existing creations" />
                </placeholder>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                <columns>
                    <TableColumn sortable="false" text="Creations">
                        <cellValueFactory>
                            <PropertyValueFactory property="name" />
                        </cellValueFactory>
                    </TableColumn>
					<TableColumn fx:id="Playlist" sortable="false" text="Practice" />
                </columns>
            </TableView>

            <HBox spacing="10">
                <TextField fx:id="addNewTextField" promptText="Creation Name" />
                <Button fx:id="addNewButton" text="Add New" />
            </HBox>
        </VBox>

        <VBox spacing="10">
			<TextFlow prefWidth="320" textAlignment="CENTER">
				<Text fx:id="currentCreationName" style="-fx-font-size: 32px;" text="Choose Creation" />
			</TextFlow>

            <HBox alignment="CENTER" spacing="10">
				<Button fx:id="prevCreation">
					<graphic>
						<FontIcon iconLiteral="fa-step-backward:24" />
					</graphic>
				</Button>
				<Button fx:id="playButton">
					<graphic>
						<FontIcon iconLiteral="fa-play:24" />
					</graphic>
				</Button>
				<Button fx:id="nextCreation">
					<graphic>
						<FontIcon iconLiteral="fa-step-forward:24" />
					</graphic>
				</Button>
				<Button fx:id="randomCreation">
					<graphic>
						<FontIcon iconLiteral="fa-random:24" />
					</graphic>
				</Button>
				<Button fx:id="deleteButton">
					<graphic>
						<FontIcon iconLiteral="fa-trash:24" />
					</graphic>
				</Button>
            </HBox>

			<HBox alignment="CENTER" spacing="10">
				<ComboBox fx:id="Versions" />
			</HBox>

			<HBox alignment="CENTER" spacing="10">
				<Button fx:id="attemptName" text="Attempt Name" />
            	<Button fx:id="testMicButton" text="Test Microphone" />
			</HBox>

			<TextFlow textAlignment="CENTER">
				<Text fx:id="lastRecording" text="Last Recording: None" />
			</TextFlow>

			<HBox alignment="CENTER" spacing="10">
				<Button fx:id="playAttempt" disable="true">
					<graphic>
						<FontIcon iconLiteral="fa-play:18" />
					</graphic>
				</Button>
				<Button fx:id="saveAttempt" disable="true">
					<graphic>
						<FontIcon iconLiteral="fa-save:18" />
					</graphic>
				</Button>
				<Button fx:id="trashAttempt" disable="true">
					<graphic>
						<FontIcon iconLiteral="fa-trash:18" />
					</graphic>
				</Button>
			</HBox>

			<Pane prefHeight="200.0" prefWidth="200.0">
				<children>
					<Label layoutX="102.0" layoutY="14.0" text="Creation Rating">
                  <font>
                     <Font name="System Bold" size="13.0" />
                  </font></Label>
					<Label fx:id="wordRating" alignment="CENTER" disable="true" layoutX="121.0" layoutY="79.0" prefHeight="26.0" prefWidth="76.0" />
               <Button fx:id="goodButton" disable="true" layoutX="100.0" layoutY="30.0" mnemonicParsing="false" onAction="#goodButtonAction" text="Good" />
               <Button fx:id="badButton" disable="true" layoutX="165.0" layoutY="31.0" mnemonicParsing="false" onAction="#badButtonAction" prefHeight="26.0" prefWidth="52.0" text="Bad" />
               <Label layoutX="132.0" layoutY="64.0" text="Current:">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
				</children>
			</Pane>
        </VBox>
    </HBox>
</VBox>
