<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NameSayer.Controller" fx:id="body">
	<padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>

    <Text text="Welcome to NameSayer!" />

    <HBox spacing="10">
        <VBox spacing="10">
            <TableView fx:id="Creations">
                <placeholder>
                    <Label text="No existing creations" />
                </placeholder>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                <columns>
                    <TableColumn sortable="false" text="Creations">
                        <cellValueFactory>
                            <PropertyValueFactory property="name" />
                        </cellValueFactory>
                    </TableColumn>
					<TableColumn fx:id="Playlist" sortable="false" text="Practice" />
                </columns>
            </TableView>

            <HBox spacing="10">
                <TextField fx:id="addNewTextField" promptText="Creation Name" />
                <Button fx:id="addNewButton" text="Add New" />
            </HBox>
        </VBox>

        <VBox spacing="10">
			<TextFlow prefWidth="320" textAlignment="CENTER">
				<Text fx:id="currentCreationName" style="-fx-font-size: 32px;" text="Choose Creation" />
			</TextFlow>

            <HBox alignment="CENTER" spacing="10">
				<Button fx:id="prevCreation">
					<graphic>
						<FontIcon iconLiteral="fa-step-backward:24"/>
					</graphic>
				</Button>
				<Button fx:id="playButton">
					<graphic>
						<FontIcon iconLiteral="fa-play:24"/>
					</graphic>
				</Button>
				<Button fx:id="nextCreation">
					<graphic>
						<FontIcon iconLiteral="fa-step-forward:24"/>
					</graphic>
				</Button>
				<Button fx:id="randomCreation">
					<graphic>
						<FontIcon iconLiteral="fa-random:24"/>
					</graphic>
				</Button>
				<Button fx:id="deleteButton">
					<graphic>
						<FontIcon iconLiteral="fa-trash:24"/>
					</graphic>
				</Button>
            </HBox>

			<HBox alignment="CENTER" spacing="10">
				<ComboBox fx:id="Versions" />
			</HBox>

			<HBox alignment="CENTER" spacing="10">
				<Button fx:id="attemptName" text="Attempt Name" />
            	<Button fx:id="testMicButton" text="Test Microphone" />
			</HBox>

			<TextFlow textAlignment="CENTER">
				<Text fx:id="lastRecording" text="Last Recording: None"/>
			</TextFlow>

			<HBox alignment="CENTER" spacing="10">
				<Button fx:id="playAttempt" disable="true">
					<graphic>
						<FontIcon iconLiteral="fa-play:18"/>
					</graphic>
				</Button>
				<Button fx:id="saveAttempt" disable="true">
					<graphic>
						<FontIcon iconLiteral="fa-save:18"/>
					</graphic>
				</Button>
				<Button fx:id="trashAttempt" disable="true">
					<graphic>
						<FontIcon iconLiteral="fa-trash:18"/>
					</graphic>
				</Button>
			</HBox>

			<Pane prefHeight="200.0" prefWidth="200.0">
				<children>
					<Slider fx:id="ratingSlider" disable="true" layoutX="90.0" layoutY="29.0" onDragDetected="#ratingSliderAction" onDragDone="#ratingSliderAction" onDragDropped="#ratingSliderAction" onDragEntered="#ratingSliderAction" onDragExited="#ratingSliderAction" onDragOver="#ratingSliderAction" onInputMethodTextChanged="#ratingSliderAction" onKeyPressed="#ratingSliderAction" onKeyReleased="#ratingSliderAction" onKeyTyped="#ratingSliderAction" onMouseClicked="#ratingSliderAction" onMouseDragEntered="#ratingSliderAction" onMouseDragExited="#ratingSliderAction" onMouseDragOver="#ratingSliderAction" onMouseDragReleased="#ratingSliderAction" onMouseDragged="#ratingSliderAction" onMousePressed="#ratingSliderAction" onMouseReleased="#ratingSliderAction" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
					<Label layoutX="109.0" layoutY="14.0" text="Creation Rating" />
					<Label fx:id="wordRating" disable="true" layoutX="128.0" layoutY="67.0" />
				</children>
			</Pane>
        </VBox>
    </HBox>
</VBox>
