<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.RadioButton?>
<VBox fx:id="body" spacing="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NameSayer.Controller">
	<padding>
		<Insets bottom="25" left="25" right="25" top="25" />
	</padding>

	<Text text="Welcome to NameSayer!" />

	<HBox spacing="10">
		<VBox spacing="10">
			<TableView fx:id="Creations">
				<placeholder>
					<Label text="No existing creations" />
				</placeholder>
				<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
				<columns>
					<TableColumn sortable="false" text="Creations">
						<cellValueFactory>
							<PropertyValueFactory property="name" />
						</cellValueFactory>
					</TableColumn>
					<TableColumn fx:id="Playlist" sortable="false" text="Practice" />
				</columns>
			</TableView>

			<HBox spacing="10">
				<TextField fx:id="addNewTextField" promptText="Creation Name" />
				<Button fx:id="addNewButton" text="Add New" />
			</HBox>
		</VBox>

		<VBox spacing="10" alignment="TOP_CENTER">
			<TextFlow prefWidth="320" textAlignment="CENTER">
				<Text fx:id="currentCreationName" style="-fx-font-size: 32px;" text="Choose Creation" />
			</TextFlow>

			<HBox alignment="CENTER" spacing="10">
				<Button fx:id="prevCreation">
					<graphic>
						<FontIcon iconLiteral="fa-step-backward:24" />
					</graphic>
				</Button>
				<Button fx:id="playButton">
					<graphic>
						<FontIcon iconLiteral="fa-play:24" />
					</graphic>
				</Button>
				<Button fx:id="nextCreation">
					<graphic>
						<FontIcon iconLiteral="fa-step-forward:24" />
					</graphic>
				</Button>
				<Button fx:id="randomCreation">
					<graphic>
						<FontIcon iconLiteral="fa-random:24" />
					</graphic>
				</Button>
				<Button fx:id="deleteButton">
					<graphic>
						<FontIcon iconLiteral="fa-trash:24" />
					</graphic>
				</Button>
			</HBox>

			<ComboBox fx:id="Versions" />

			<HBox alignment="CENTER" spacing="10" fx:id="ratingButtons">
				<Text text="Rate Recording:"/>

				<fx:define>
					<ToggleGroup fx:id="rating" />
				</fx:define>

				<RadioButton text="Good" userData="Good" fx:id="goodRating" toggleGroup="$rating" />
				<RadioButton text="Bad" userData="Bad" fx:id="badRating" toggleGroup="$rating" />
			</HBox>

			<HBox alignment="CENTER" spacing="10">
				<Button fx:id="attemptName" text="Attempt Name" />
				<Button fx:id="testMicButton" text="Test Microphone" />
			</HBox>

			<TextFlow textAlignment="CENTER">
				<Text fx:id="lastRecording" text="Last Recording: None" />
			</TextFlow>

			<HBox alignment="CENTER" spacing="10" fx:id="attemptButtons" disable="true">
				<Button fx:id="playAttempt">
					<graphic>
						<FontIcon iconLiteral="fa-play:18" />
					</graphic>
				</Button>
				<Button fx:id="saveAttempt">
					<graphic>
						<FontIcon iconLiteral="fa-save:18" />
					</graphic>
				</Button>
				<Button fx:id="trashAttempt">
					<graphic>
						<FontIcon iconLiteral="fa-trash:18" />
					</graphic>
				</Button>
			</HBox>
		</VBox>
	</HBox>
</VBox>
