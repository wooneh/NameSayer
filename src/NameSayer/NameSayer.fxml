<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.media.MediaView?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.TextFlow?>
<VBox fx:controller="NameSayer.Controller" xmlns:fx="http://javafx.com/fxml" spacing="10">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Text text="Welcome to NameSayer!"/>

    <HBox spacing="10">
        <VBox spacing="10">
            <TableView fx:id="Creations">
                <placeholder>
                    <Label text="No existing creations"/>
                </placeholder>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <columns>
                    <TableColumn text="Creations">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <items>
                    <FXCollections fx:factory="observableArrayList">
                    </FXCollections>
                </items>
            </TableView>

            <HBox spacing="10">
                <TextField fx:id="addNewTextField" promptText="Creation Name"/>
                <Button fx:id="addNewButton" text="Add New"/>
            </HBox>
        </VBox>

        <VBox spacing="10">
            <HBox spacing="10" style="-fx-background-color:black;">
                <MediaView fx:id="Video" fitHeight="240" fitWidth="320" />
            </HBox>

            <HBox spacing="10">
                <Button fx:id="playButton" text="Play"/>
                <Button fx:id="deleteButton" text="Delete"/>
            </HBox>

            <TextFlow prefWidth="320">
                <Text text="How To Use:&#10;"/>
                <Text text="To save a new creation, enter a name into the text field.&#10;"/>
                <Text text="To play an existing creation, select a creation from the table and press 'Play'.&#10;"/>
                <Text text="To delete a creation, select a creation from the table and press 'Delete'.&#10;"/>
                <Text text="Â© Wooneh 2018"/>
            </TextFlow>
        </VBox>
    </HBox>
</VBox>