<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NameSayer.Controller">
	<padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>

    <Text text="Welcome to NameSayer!" />

    <HBox spacing="10">
        <VBox spacing="10">
            <TableView fx:id="Creations">
                <placeholder>
                    <Label text="No existing creations" />
                </placeholder>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                <columns>
                    <TableColumn sortable="false" text="Creations">
                        <cellValueFactory>
                            <PropertyValueFactory property="name" />
                        </cellValueFactory>
                    </TableColumn>
					<TableColumn fx:id="Playlist" sortable="false" text="Practice" />
                </columns>
            </TableView>

            <HBox spacing="10">
                <TextField fx:id="addNewTextField" promptText="Creation Name" />
                <Button fx:id="addNewButton" text="Add New" />
            </HBox>
        </VBox>

        <VBox spacing="10">
			<TextFlow prefWidth="320" textAlignment="CENTER">
				<Text fx:id="currentCreationName" style="-fx-font-size: 32px;" text="Choose Creation" />
			</TextFlow>

            <HBox alignment="CENTER" spacing="10">
				<Button fx:id="prevCreation" style="-fx-font-size:16px" text="⏮" />
				<Button fx:id="playButton" style="-fx-font-size:16px" text="▶" />
				<Button fx:id="nextCreation" style="-fx-font-size:16px" text="⏭" />
				<Button fx:id="randomCreation" style="-fx-font-size:16px" text="🔀" />
				<Button fx:id="deleteButton" style="-fx-font-size:16px" text="❌" />
            </HBox>

			<HBox alignment="CENTER" spacing="10">
				<ComboBox fx:id="Versions" />
			</HBox>

			<HBox alignment="CENTER" spacing="10">
				<Button text="Attempt Name" />
            <Button fx:id="testMicButton" layoutX="113.0" layoutY="10.0" onAction="#testMicAction" text="Test Microphone" />
			</HBox>
         <Pane prefHeight="200.0" prefWidth="200.0">
            <children>
               <Slider layoutX="90.0" layoutY="29.0" />
               <Label layoutX="109.0" layoutY="14.0" text="Creation Rating" />
            </children>
         </Pane>
        </VBox>
    </HBox>
</VBox>
